<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <Made_CouchdbSession>
            <version>1.0.0</version>
        </Made_CouchdbSession>
    </modules>
    <global>
        <models>
            <core_resource>
                <rewrite>
                    <session>Made_CouchdbSession_Model_Session</session>
                </rewrite>
            </core_resource>
            <made_couchdbsession>
                <class>Made_CouchdbSession_Model</class>
            </made_couchdbsession>
        </models>
    </global>
    <crontab>
        <jobs>
            <couchdb_session_gc>
                <schedule>
                    <cron_expr>0,30 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>made_couchdbsession/session::gc</model>
                </run>
            </couchdb_session_gc>
        </jobs>
    </crontab>
</config>
